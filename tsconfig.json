{
  "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "outDir": "dist",
      "lib": ["esnext"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": false
  },
  "include": [
      "src/**/*"
  ]
}
